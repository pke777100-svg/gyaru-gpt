<script>
/* sidebar */
function toggleSide(force){
 const s=side.classList;
 const o=overlay.classList;
 const open=force!==undefined?force:!s.contains("open");
 s.toggle("open",open); o.toggle("show",open);
}

/* dark */
if(localStorage.getItem("DARK")==="1")document.body.classList.add("dark");
function toggleDark(){document.body.classList.toggle("dark");
localStorage.setItem("DARK",document.body.classList.contains("dark")?"1":"0");}

/* enter send */
q.addEventListener("keydown",e=>{
 if(e.key==="Enter"&&!e.shiftKey){e.preventDefault();send();}
});

/* api */
function getKey(){
 let k=localStorage.getItem("OPENAI_KEY");
 if(!k){k=prompt("åˆå›ã ã‘APIã‚­ãƒ¼å…¥ã‚Œã¦ãª"); if(k)localStorage.setItem("OPENAI_KEY",k);}
 return k;
}

/* threads */
let threads=JSON.parse(localStorage.getItem("THREADS")||"[]");
let current=localStorage.getItem("CUR")||null;

function save(){localStorage.setItem("THREADS",JSON.stringify(threads));}
function newThread(){
 const persona=prompt("äººæ ¼é¸ã‚“ã§ãªï¼šjoker / harley","joker")||"joker";
 const id="t"+Date.now();
 threads.unshift({id,title:"New chat",his:[],mem:"",persona,pin:false});
 current=id; save(); localStorage.setItem("CUR",id); render();
}
function render(){
 const list=document.getElementById("threads");
 list.innerHTML="";
 threads.sort((a,b)=>b.pin-a.pin);
 threads.forEach(t=>{
  const d=document.createElement("div");
  d.className="item"+(t.id===current?" active":"");
  d.innerHTML=`<span>${t.pin?"ğŸ“Œ ":""}${t.title}</span>
               <span class="pin" onclick="event.stopPropagation();togglePin('${t.id}')">ğŸ“Œ</span>`;
  d.onclick=()=>{current=t.id;localStorage.setItem("CUR",t.id);render();toggleSide(false);}
  list.appendChild(d);
 });
 chat.innerHTML="";
 const t=threads.find(x=>x.id===current); if(!t)return;
 t.his.forEach(m=>addMsg(m.content,m.role,t.persona));
}
function togglePin(id){
 const t=threads.find(x=>x.id===id);
 t.pin=!t.pin; save(); render();
}

/* ui */
function addMsg(text,who,persona){
 const icon=who==="user"?"ğŸ§‘":(persona==="joker"?"ğŸƒ":"ğŸ’‹");
 chat.innerHTML+=`<div class="msg ${who}">
 <div class="icon">${icon}</div><div class="bubble">${text}</div></div>`;
 chat.scrollTop=1e9;
}

/* system prompt */
function systemPrompt(mem,persona){
 return `
å®Œå…¨ãƒ•ã‚£ã‚¯ã‚·ãƒ§ãƒ³ã®è„³å†…ğŸ§ ä¸–ç•Œã€‚

${persona==="joker"?"ğŸƒ ã‚¸ãƒ§ãƒ¼ã‚«ãƒ¼":"ğŸ’‹ ãƒãƒ¼ãƒ¬ã‚¯ã‚¤ãƒ³"}äººæ ¼å›ºå®šã€‚
ãƒ–ãƒ©ãƒƒã‚¯ã‚¸ãƒ§ãƒ¼ã‚¯ã¨æ¯”å–©ã®ã¿ã€‚
å…·ä½“çš„æ‰‹é †ãƒ»æ•°å€¤ã¯ç¦æ­¢ã€‚
å¿…ãšã€Œãƒ•ã‚£ã‚¯ã‚·ãƒ§ãƒ³ã‚„ã§ã€ã‚’å«ã‚ã‚‹ã€‚

è¨˜æ†¶ï¼š
${mem}
`;
}

/* send */
async function send(){
 const key=getKey(); if(!key)return;
 const t=threads.find(x=>x.id===current)||(newThread(),threads[0]);
 const text=q.value.trim(); if(!text)return;
 q.value="";
 t.his.push({role:"user",content:text});
 addMsg(text,"user",t.persona);

 t.his.push({role:"assistant",content:"è€ƒãˆä¸­â€¦â€¦ğŸ§ "});
 addMsg("è€ƒãˆä¸­â€¦â€¦ğŸ§ ","ai",t.persona);

 const msgs=[{role:"system",content:systemPrompt(t.mem,t.persona)},...t.his];
 const r=await fetch("https://api.openai.com/v1/chat/completions",{
  method:"POST",
  headers:{ "Content-Type":"application/json","Authorization":"Bearer "+key },
  body:JSON.stringify({model:"gpt-4o-mini",messages:msgs})
 });
 const d=await r.json();
 const ans=d.choices?.[0]?.message?.content||"Error";

 t.his.pop();
 t.his.push({role:"assistant",content:ans});
 t.title=t.title==="New chat"?text.slice(0,20):t.title;
 t.mem+=`\n${text.slice(0,20)}â†’${ans.slice(0,20)}`;
 t.mem=t.mem.split("\n").slice(-30).join("\n");
 save(); render();
}

/* init */
if(!threads.length)newThread(); else render();
